@page
@model LoginModel
@{ ViewData["Title"] = "Log in"; }

<div class="row justify-content-center align-items-center vh-100">
    <div class="card" style="width:350px">
        <div class="card-body">
            <div class="card-title text-center">
                <h1>
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-muted">
                        Cinegest
                    </a>
                </h1>
            </div>
            <div class="card-title text-center text-dark">
                <h4>
                    Login
                </h4>
            </div>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="text-muted"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="text-muted"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-1">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="text-muted">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group mb-0">
                    <button type="submit" class="btn btn-success btn-block">Entrar</button>
                </div>
                <a asp-area="Identity" asp-page="/Account/Register">Ainda não tem conta?</a>
                <br />
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Re-enviar confirmação de email.</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
