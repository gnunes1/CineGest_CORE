@page
@model RegisterModel
@{ ViewData["Title"] = "Registar"; }

<div class="row justify-content-center align-items-center vh-100">
    <div class="card" style="width:350px">
        <div class="card-body">
            <div class="card-title text-center">
                <h1>
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-muted">
                        Cinegest
                    </a>
                </h1>
            </div>
            <div class="card-title text-center text-dark">
                <h4>
                    Registar
                </h4>
            </div>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Nome" class="text-muted"></label>
                    <input asp-for="Input.Nome" class="form-control" />
                    <span asp-validation-for="Input.Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="text-muted"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="text-muted"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="text-muted"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.DoB" class="text-muted"></label>
                    <input asp-for="Input.DoB" class="form-control" max=@DateTime.Now.ToString("yyyy-MM-dd") />
                    <span asp-validation-for="Input.DoB" class="text-danger"></span>
                </div>
                <div class="form-group mb-0">
                    <button type="submit" class="btn btn-success btn-block">Criar conta</button>
                </div>
                <a asp-area="Identity" asp-page="/Account/Login">
                    Já tem conta?
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
