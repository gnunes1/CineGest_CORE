@model CineGest.Models.Users

@{
    ViewData["Title"] = "Apagar Utilizador";
}

<h2>Apagar Utilizador</h2>

<p>Tem acerteza que quer apagar este registo?</p>
<div class="ml-3">
    <dl class="row">
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Data de nascimento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DoB)
        </dd>
        <dt class="col-sm-2">
            Fotografia
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Avatar)
        </dd>
        <dt class="col-sm-2">
            Cargo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à tabela</a>
    </form>
</div>
