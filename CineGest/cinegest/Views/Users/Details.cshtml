@model CineGest.Models.Users

@{
    ViewData["Title"] = "Detalhes Utilizador";
}

<h2>Detalhes Utilizador</h2>

<div class="row ml-3">
    <dl class="col-4">
        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-auto">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-auto">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.DoB)
        </dt>
        <dd class="col-sm-auto">
            @Html.DisplayFor(model => model.DoB)
        </dd>
        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class="col-sm-auto">
            @Html.DisplayFor(model => model.Role)
        </dd>
    </dl>
    <dl class="col-5">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Avatar)
        </dt>
        <dd class="col-sm-8">
            <img src="~/images/users/@Html.DisplayFor(model => model.Avatar)" alt="Avatar" class="rounded-circle" style="width:inherit;">

        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Voltar à tabela</a>
</div>
