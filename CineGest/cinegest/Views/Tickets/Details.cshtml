@model CineGest.Models.Tickets

@{
    ViewData["Title"] = "Detalhes Bilhete";
}

<h2>Detalhes Bilhete</h2>

<div class="ml-3">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Session.Cinema.Name)

        </dt>
        <dd class="col-sm-10">
            <a asp-area="Cinemas" asp-page="/Details" asp-route-id="@Model.Session.Cinema.Id">
                @Html.DisplayFor(model => model.Session.Cinema.Name)
            </a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Session.Movie.Name)

        </dt>
        <dd class="col-sm-10">
            <a asp-area="Movies" asp-page="/Details" asp-route-id="@Model.Session.Movie.Id">
                @Html.DisplayFor(model => model.Session.Movie.Name)
            </a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            <a class="mt-2 btn btn-lg btn-warning" asp-area="Users" asp-page="/Details" asp-route-id="@Model.User.Id">
                @Html.DisplayFor(model => model.User.Email)
            </a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Seat)

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seat)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Voltar à tabela</a>
</div>
