@model CineGest.Models.Movies

@{
    ViewData["Title"] = "Apagar Filme";
}

<h2>Apagar Filme - @Model.Name</h2>

<p>Tem acerteza que quer apagar este registo?</p>
<div class="ml-3">
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Gêneros
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genres)
        </dd>
        <dt class="col-sm-2">
            Poster
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Poster)
        </dd>
        <dt class="col-sm-2">
            Duração
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt class="col-sm-2">
            Idade mínima
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Min_age)
        </dd>
        <dt class="col-sm-2">
            Em destaque
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Highlighted)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à tabela</a>
    </form>
</div>
