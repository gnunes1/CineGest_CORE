@model CineGest.Models.Sessions

@{
    ViewData["Title"] = "Criar Sessão";
}

<h2>Criar Sessão</h2>

<div class="row ml-3">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Cinema</label>
                <select asp-for="CinemaFK" class="form-control col-6" asp-items="ViewBag.CinemaFK"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Filme</label>
                <select asp-for="MovieFK" class="form-control col-6" asp-items="ViewBag.MovieFK"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Data de início</label>
                <input type="datetime-local" asp-for="Start" class="form-control col-7" min=@DateTime.Now.ToString("yyyy-MM-ddTHH:mm") />
                <span asp-validation-for="Start" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à tabela</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
