@model CineGest.Models.Sessions

@{
    ViewData["Title"] = "Detalhes Sessão";
}

<h2>Detalhes Sessão</h2>

<div class="ml-3">
    <dl class="row">
        <dt class="col-sm-2">
            Cinema
        </dt>
        <dd class="col-sm-10">
            <a asp-area="Cinemas" asp-page="/Details" asp-route-id="@Model.Cinema.Id">
                @Html.DisplayFor(model => model.Cinema.Name)
            </a>
        </dd>
        <dt class="col-sm-2">
            Filme
        </dt>
        <dd class="col-sm-10">
            <a asp-area="Movies" asp-page="/Details" asp-route-id="@Model.Movie.Id">
                @Html.DisplayFor(model => model.Movie.Name)
            </a>
        </dd>
        <dt class="col-sm-2">
            Data de início
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Start)
        </dd>
        <dt class="col-sm-2">
            Data de fim
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.End)
        </dd>
        <dt class="col-sm-2">
            Lugares ocupados
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Occupated_seats)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Voltar à tabela</a>
</div>
